@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoria";
}

<br/>
<br/>
<h3 class="text-center"> Crear nueva categoria</h3>

<form method="post" asp-action="Create">
    <div class="row   border ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4 ">
           

            <div class="form-group row mb-2">
                <div class="col-5">
                    <label class="">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mb-2">
                <div class="col-5">
                    <label class="">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Orden" class="form-control" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group ">
                
                <div class="col-7 float-end mb-4">
                    <!-- Agregar vista parcial -->
                    <partial name="_VistaCrearVolver"/>
                </div>
            </div>

        </div>
    </div>
</form>