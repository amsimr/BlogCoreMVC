@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<br />
<h3 class="text-center"> Editar categoria</h3>

<form method="post" asp-action="Edit">
    <div class="row   border ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4 ">


            <div class="form-group row mb-2">
                <div class="col-5">
                    <label class="">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoria" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mb-2">
                <div class="col-5">
                    <label class="">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el orden de visualizacion" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mb-4 justify-content-end">

                <div class="col-3">
                    <!-- Agregar vista parcial -->
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a la lista</a>
                </div>
            </div>

        </div>
    </div>
</form>